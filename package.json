{
  "name": "frw-free-web-modern",
  "version": "2.0.0",
  "description": "Decentralized web protocol with quantum-resistant cryptography",
  "private": true,
  "workspaces": [
    "packages/common",
    "packages/crypto",
    "packages/crypto-pq",
    "packages/ipfs",
    "packages/protocol",
    "packages/protocol-v2",
    "packages/pow-v2",
    "packages/sandbox",
    "packages/storage",
    "packages/name-registry",
    "apps/cli",
    "apps/browser",
    "apps/bootstrap-node",
    "apps/chrome-extension"
  ],
  "scripts": {
    "bootstrap": "npm install && npm run build",
    "build": "npx tsc -b packages/common && npx tsc -b packages/crypto packages/ipfs packages/protocol packages/storage packages/name-registry && npm run build:cli && npm run build:bootstrap",
    "build:cli": "npx tsc -b apps/cli",
    "build:bootstrap": "cd apps/bootstrap-node && npm run build",
    "start:bootstrap": "cd apps/bootstrap-node && npm start",
    "browser": "cd apps/browser && npm run dev",
    "install:cli": "npm link apps/cli",
    "chat-server": "node scripts/chat-server.js",
    "type-check": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint \"packages/**/*.{js,ts}\" \"apps/**/*.{js,ts}\"",
    "lint:fix": "eslint \"packages/**/*.{js,ts}\" \"apps/**/*.{js,ts}\" --fix",
    "format": "prettier --write \"**/*.{js,ts,json,md}\"",
    "clean": "npx tsc -b --clean",
    "version": "lerna version",
    "publish": "lerna publish from-package"
  },
  "keywords": [
    "frw",
    "decentralized",
    "p2p",
    "ipfs",
    "web3"
  ],
  "author": "FRW Community",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/frw-community/frw-free-web-modern.git"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@playwright/test": "^1.40.1",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.6",
    "electron": "^39.2.0",
    "esbuild": "^0.19.11",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "lerna": "^8.0.1",
    "prettier": "^3.1.1",
    "ts-jest": "^29.4.5",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "@types/bs58": "^4.0.4",
    "bs58": "^6.0.0",
    "ipfs-http-client": "^60.0.1",
    "tweetnacl": "^1.0.3",
    "ws": "^8.17.1"
  }
}
